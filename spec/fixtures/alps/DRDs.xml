<?xml version="1.0" encoding="UTF-8"?>
<alps>
  <doc>
Describes the semantics, states and state transitions associated with DRDs.  </doc>
  <link rel="self" href="http://alps.example.com/DRDs"/>
  <link rel="help" href="http://docs.example.org/Things/DRDs"/>
  <descriptor id="drds" type="semantic">
    <doc format="html">
<p>A list of DRDs.</p>    </doc>
    <link rel="self" href="http://alps.example.com/DRDs#drds"/>
    <descriptor id="total_count" type="semantic" href="http://alps.io/schema.org/Integer">
      <doc>
The total count of DRDs.      </doc>
    </descriptor>
    <descriptor id="items" type="semantic" href="http://alps.io/schema.org/Array">
      <doc>
An array of embedded DRD resources.      </doc>
    </descriptor>
    <descriptor id="list" name="self" type="safe" rt="drds">
      <doc>
Returns a list of DRDs.      </doc>
    </descriptor>
    <descriptor id="search" type="safe" rt="drds">
      <doc>
Returns a list of DRDs that satisfy the search term.      </doc>
      <descriptor id="search_term" type="semantic" href="http://alps.io/schema.org/Text">
        <doc>
The terms to search.        </doc>
      </descriptor>
    </descriptor>
    <descriptor id="create" type="unsafe" rt="drd">
      <doc>
Creates a DRD.      </doc>
      <descriptor id="create-drd" type="semantic" href="update-drd">
        <doc>
drd attributes to create a drd object        </doc>
        <link rel="self" href="http://alps.example.com/DRDs#create-drd"/>
        <link rel="help" href="http://docs.example.org/Forms/create-drd"/>
        <descriptor id="form-name" name="name" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
The name of the DRD.          </doc>
        </descriptor>
        <descriptor id="form-leviathan_uuid" name="leviathan_uuid" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
The UUID of the creator Leviathan.          </doc>
        </descriptor>
        <descriptor id="form-leviathan_health_points" name="leviathan_health_points" type="semantic" href="http://alps.io/schema.org/Integer">
          <doc>
The health points of Leviathan.          </doc>
        </descriptor>
        <descriptor id="form-leviathan_email" name="leviathan_email" type="semantic" href="http://alps.io/schema.org/Integer">
          <doc>
The Leviathan respond to email.          </doc>
        </descriptor>
      </descriptor>
    </descriptor>
  </descriptor>
  <descriptor id="drd" type="semantic">
    <doc>
Diagnostic Repair Drones or DRDs are small robots that move around Leviathans. They are
built by a Leviathan as it grows.
    </doc>
    <link rel="self" href="http://alps.example.com/DRDs#drd"/>
    <descriptor id="uuid" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
The UUID of the DRD.      </doc>
    </descriptor>
    <descriptor id="name" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
The name of the DRD.      </doc>
    </descriptor>
    <descriptor id="status" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
How is the DRD.      </doc>
      <ext value="{&quot;id&quot;:&quot;drd_status_options&quot;,&quot;hash&quot;:{&quot;active&quot;:&quot;activated&quot;,&quot;inactive&quot;:&quot;deactivated&quot;,&quot;unknown&quot;:&quot;renegade&quot;}}" href="http://alps.io/extensions/serialized_options_list"/>
    </descriptor>
    <descriptor id="old_status" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
How was the DRD before the last change      </doc>
      <ext value="{&quot;id&quot;:&quot;drd_status_options&quot;,&quot;hash&quot;:{&quot;active&quot;:&quot;activated&quot;,&quot;inactive&quot;:&quot;deactivated&quot;,&quot;unknown&quot;:&quot;renegade&quot;}}" href="http://alps.io/extensions/serialized_options_list"/>
    </descriptor>
    <descriptor id="kind" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
What kind is it.      </doc>
      <ext value="{&quot;list&quot;:[&quot;standard&quot;,&quot;sentinel&quot;]}" href="http://alps.io/extensions/serialized_options_list"/>
    </descriptor>
    <descriptor id="size" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
How large it is      </doc>
      <ext value="{&quot;datalist&quot;:&quot;size-list&quot;}" href="http://alps.io/extensions/serialized_options_list"/>
    </descriptor>
    <descriptor id="leviathan_uuid" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
The UUID of the creator Leviathan.      </doc>
    </descriptor>
    <descriptor id="built_at" type="semantic" href="http://alps.io/schema.org/DateTime">
      <doc>
When the DRD was constructed.      </doc>
    </descriptor>
    <descriptor id="leviathan" type="semantic" href="http://alps.io/schema.org/Thing/Leviathan">
      <doc>
The associated Leviathan resource.      </doc>
    </descriptor>
    <descriptor id="location" type="semantic" href="http://alps.io/schema.org/Text">
      <doc>
The area the DRD is currently in      </doc>
      <ext value="{&quot;external_hash&quot;:&quot;http://crichton.example.com/drd_location_list#items&quot;,&quot;value_attribute_name&quot;:&quot;location_id&quot;,&quot;text_attribute_name&quot;:&quot;location_text&quot;}" href="http://alps.io/extensions/serialized_options_list"/>
    </descriptor>
    <descriptor id="destroyed" type="semantic" href="http://alps.io/schema.org/Boolean">
      <doc>
This DRD has been destroyed      </doc>
    </descriptor>
    <descriptor id="show" name="self" type="safe" rt="drd">
      <doc>
Shows a particular DRD.      </doc>
    </descriptor>
    <descriptor id="activate" type="idempotent" rt="drd">
      <doc>
Activates a DRD if it is deactivated.      </doc>
    </descriptor>
    <descriptor id="deactivate" type="idempotent" rt="drd">
      <doc>
Deactivates a DRD if it is activated.      </doc>
    </descriptor>
    <descriptor id="leviathan-link" name="leviathan" type="safe" rt="http://alps.io/schema.org/Leviathan#leviathan">
      <doc>
A reference to the Leviathan the DRD works on.      </doc>
    </descriptor>
    <descriptor id="repair-history" type="safe" rt="http://alps.io/schema.org/Repairs#history">
      <doc>
A reference to the list of historical repairs performed.      </doc>
    </descriptor>
    <descriptor id="update" type="idempotent" rt="none">
      <doc>
Updates a DRD.      </doc>
      <descriptor id="update-drd" type="semantic">
        <doc>
attributes to update an existing drd object        </doc>
        <link rel="self" href="http://alps.example.com/DRDs#drd/update/update-drd"/>
        <link rel="help" href="http://docs.example.org/Forms/update-drd"/>
        <descriptor id="form-status" name="status" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
How is the DRD.          </doc>
          <ext value="{&quot;id&quot;:&quot;drd_status_options&quot;,&quot;hash&quot;:{&quot;active&quot;:&quot;activated&quot;,&quot;inactive&quot;:&quot;deactivated&quot;,&quot;unknown&quot;:&quot;renegade&quot;}}" href="http://alps.io/extensions/serialized_options_list"/>
        </descriptor>
        <descriptor id="form-old_status" name="status" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
How is the DRD.          </doc>
          <ext value="{&quot;hash&quot;:{&quot;active&quot;:&quot;activated&quot;,&quot;inactive&quot;:&quot;deactivated&quot;,&quot;unknown&quot;:&quot;renegade&quot;}}" href="http://alps.io/extensions/serialized_options_list"/>
        </descriptor>
        <descriptor id="form-kind" name="kind" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
What kind is it.          </doc>
          <ext value="{&quot;list&quot;:[&quot;standard&quot;,&quot;sentinel&quot;]}" href="http://alps.io/extensions/serialized_options_list"/>
        </descriptor>
        <descriptor id="form-size" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
How large it is          </doc>
          <ext value="{&quot;datalist&quot;:&quot;size-list&quot;}" href="http://alps.io/extensions/serialized_options_list"/>
        </descriptor>
        <descriptor id="form-location" name="location" type="semantic" href="http://alps.io/schema.org/Text">
          <doc>
The area the DRD is currently in          </doc>
          <ext value="{&quot;external_list&quot;:&quot;http://crichton.example.com/drd_location_list#items&quot;,&quot;value_attribute_name&quot;:&quot;location_id&quot;,&quot;text_attribute_name&quot;:&quot;location_text&quot;}" href="http://alps.io/extensions/serialized_options_list"/>
        </descriptor>
        <descriptor id="form-destroyed" type="semantic" href="http://alps.io/schema.org/Boolean">
          <doc>
This DRD has been destroyed          </doc>
        </descriptor>
      </descriptor>
    </descriptor>
    <descriptor id="delete" type="idempotent" rt="none">
      <doc>
Drops a DRD out an air-lock.      </doc>
    </descriptor>
  </descriptor>
  <ext href="http://alps.io/extensions/serialized_datalist" value="{&quot;kind-list&quot;:[&quot;standard&quot;,&quot;sentinel&quot;]}"/>
  <ext href="http://alps.io/extensions/serialized_datalist" value="{&quot;status-list&quot;:{&quot;active&quot;:&quot;activated&quot;,&quot;inactive&quot;:&quot;deactivated&quot;,&quot;unknown&quot;:&quot;renegade&quot;}}"/>
  <ext href="http://alps.io/extensions/serialized_datalist" value="{&quot;size-list&quot;:[&quot;small&quot;,&quot;medium&quot;,&quot;large&quot;]}"/>
</alps>
